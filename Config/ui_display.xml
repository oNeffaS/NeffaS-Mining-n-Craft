<neffas>

    <append xpath="/ui_display_info/crafting_category_display">
        <crafting_category_list display_type="advancedForge">
            <!-- <crafting_category name="" icon="ui_game_symbol_forge" display_name="lblAll" /> -->
            <crafting_category name="Resources" icon="ui_game_symbol_resource" display_name="lblCategoryResources" />
            <crafting_category name="Building" icon="ui_game_symbol_map_house" display_name="lblCategoryBuilding" />
            <!-- <crafting_category name="AdvBuilding" icon="ui_game_symbol_map_fortress" display_name="lblCategoryAdvBuilding" /> -->
            <crafting_category name="Ammo/Weapons" icon="ui_game_symbol_knife" display_name="lblCategoryAmmoWeapons" />
            <crafting_category name="Tools/Traps" icon="ui_game_symbol_tool" display_name="lblCategoryToolsTraps" />
            <!-- <crafting_category name="Decor/Miscellaneous" icon="ui_game_symbol_chair" display_name="lblCategoryDecorMisc" /> -->
        </crafting_category_list>
    </append>
    
    <append xpath="/ui_display_info/item_display">
        <item_display_info display_type="toolForgeGrinder" display_group="workstationTools">
			<display_entry name="dCraftingTime" title_key="statCraftingTimeForge" display_type="Percent" display_leading_plus="true" negative_preferred="false"/>
		</item_display_info>

		<item_display_info display_type="toolForgeTongs" display_group="workstationTools">
			<display_entry name="dCraftingSmeltTime" title_key="statCraftingSmeltTime" display_type="Percent" display_leading_plus="true" negative_preferred="false"/>
		</item_display_info>

        <item_display_info display_type="toolForgeCrucible" display_group="workstationTools">
			<display_entry name="dCraftingIngredientCount" title_key="statCraftingIngredientCount" display_type="Percent" display_leading_plus="true" negative_preferred="false"/>
		</item_display_info>

        <item_display_info display_type="ironSledgehammer" display_group="groupMelee">
			<display_entry name="EntityDamage" display_type="Decimal1" title_key="statEntityDamageMelee" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="EntityDamage" display_type="Decimal1" title_key="statPowerAttack" tags="secondary,perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="BlockDamage" display_type="Decimal1" title_key="statBlockDamage" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="StaminaLoss" display_type="Decimal1" title_key="statStaminaLoss" negative_preferred="true"/>
			<display_entry name="AttacksPerMinute" title_key="statAttacksPerMinute" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
			<display_entry name="DegradationMax" title_key="statDegradationMax" tags="perkMiner69r,perkSalvageOperations,perkElectrocutioner,perkJavelinMaster,perkPummelPete,perkSkullCrusher,perkDeepCuts,perkBrawler,admin"/>
            <display_entry name="dCraftingTime" title_key="statCraftingTimeForge" display_type="Percent" display_leading_plus="true" negative_preferred="false"/>
		</item_display_info>
    </append>
</neffas>